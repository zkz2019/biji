<!-- 预订信息 -->
<template>
  <el-container class="reserveInfo">
    <el-header class="heig30 query_headbox">
      <retrieval class="query_head marpadbor0" style="min-width:1030px;">
        <inpbox :inpb="true">
          <el-date-picker
            v-model="dates"
            type="datetimerange"
            range-separator="至"
            start-placeholder="预订开始时间"
            value-format="yyyy-MM-dd HH:mm:ss"
            :default-time="['00:00:00','23:59:59']"
            size="mini"
            end-placeholder="预订结束时间"
          ></el-date-picker>
        </inpbox>
        <inpbox inptext>
          <el-input
            clearable
            class="search qh_w230 qh_inp"
            v-model="param.search"
            :placeholder="'输入姓名/身份证号/操作账号进行检索'"
          ></el-input>
        </inpbox>
        <inpbox :inpb="true">
          <el-button class="buta qh_btn" size="small" type="primary" @click="onRefresh">查询</el-button>
          <fel-button class="qh_btn" @click="onReset">重置</fel-button>
        </inpbox>
        <inpbox inptext class="flr mar10-10-0" style="margin-right:15px;">
          <el-button class="buta qh_btn" size="small" type="primary" @click="onAdd">新增预约</el-button>
          <el-button class="buta qh_btn" size="small" type="primary" @click="onDel">批量删除</el-button>
        </inpbox>
      </retrieval>
    </el-header>
    <el-main class="pad0-10 query_main reserveInfo_table">
      <paging-table
        ref="pagingTable"
        height="100%"
        interface="/lock/operate/hotel/d/getteamperson"
        class="heig100"
        @onSelection="onSelection"
        :list="list"
        :refresh="refresh"
        :param="param"
        :noOpera="true"
      ></paging-table>
    </el-main>
    <newReservation
      :checkedroom="checkedroom"
      @handleClose="handleClose"
      :dialogVisible="dialogVisible"
    ></newReservation>
    <updateReserve
      :param="updateParam"
      @handleClose="updateNext"
      :dialogVisible="updateVisible"
    ></updateReserve>
  </el-container>
</template>

<script>
import updateReserve from "./dialog/update-reserve";
import newReservation from "./dialog/newReservation";
export default {
  props: {
    checkedroom: Object
  },
  name: "history",
  components: { newReservation, updateReserve },
  data() {
    let $this = this;
    return {
      updateParam: {},
      updateVisible: false,
      dates: [],
      dialogVisible: false,
      tpids: [],
      value: "",
      refresh: 0,
      param: {
        search: "",
        tpetime: "",
        tpstime: "",
        roomid: ""
      },
      listBut: [
        // { id: "1", name: "立即入住" },
        { id: "2", name: "修改" },
        { id: "3", name: "删除" }
      ],
      list: [
        {
          type: "selection"
        },
        {
          name: "序号",
          type: "$index",
          width: "50px"
        },
        {
          name: "预订开始日期",
          width: "108px",
          prop: "tpsdate"
        },
        {
          name: "预订结束日期",
          width: "108px",
          // prop: "tpedate",
          template: {
            props: ["scope"],
            computed: {
              row() {
                return this.scope.row;
              },
              text() {
                if (this.scope.row.tpedate == "2099-12-31 00:00:00") {
                  return "长期";
                } else {
                  return this.scope.row.tpedate;
                }
              }
            },
            template: `<el-tooltip class="item" effect="dark" :content="text" placement="top-start">
      <div style="overflow: hidden;white-space:nowrap;text-overflow:ellipsis">{{text}}</div>
    </el-tooltip>`
          }
        },
        {
          name: "姓名",
          width: "70px",
          prop: "personname"
        },
        {
          name: "性别",
          width: "50px",
          prop: "personsex"
        },
        {
          name: "身份证",
          prop: "personcode"
        },

        {
          name: "入住人手机",
          width:"110px",
          prop: "personphone"
        },
        {
          name: "团名",
          prop: "teamname"
        },
        {
          name: "团长",
          width: "70px",
          prop: "teamleader"
        },
        {
          width: "110px",
          name: "团长电话",
          prop: "teamleaderphone"
        },

        {
          name: "操作账号",
          width: "80px",
          prop: "userlogin"
        },
        {
          name: "备注",
          prop: "tpremark"
        },
        {
          name: "操作",
          width:"100px",
          template: {
            props: ["scope"],
            computed: {
              listBut() {
                return $this.listBut;
              },
              row() {
                return this.scope.row;
              }
            },
            methods: {
              onClick(key, obj) {
                if (key == "1") {
                } else if (key == "2") {
                  $this.updateParam = {
                    roomid: $this.roomid,
                    ...this.row
                  };
                  $this.updateVisible = true;
                } else {
                  this.$confirm("确定要删除预约信息吗？", "提示", {
                    confirmButtonText: "确定",
                    cancelButtonText: "取消",
                    type: "warning"
                  }).then(() => {
                    this.$ajax(
                      "/lock/operate/hotel/f/deleteteamperson",
                      { roomid: $this.checkedroom.roomid },
                      "1",
                      [this.scope.row.tpid + ""]
                    )
                      .then(res => {
                        this.$message({
                          message: "删除预约信息成功!",
                          type: "success"
                        });
                        $this.onRefresh();
                      })
                      .catch(err => {
                        this.$message({
                          message: `[${err.resultCode}] ` + err.resultMsg,
                          type: "error"
                        });
                      });
                  });
                }
              }
            },
            template: `<div class="operat-buts"> 
             <el-button v-for="item of listBut" :key="item.id" type="text" size="small" @click.stop="onClick(item.id,item)">{{item.name}}</el-button>
            </div>`
          }
        }
      ]
    };
  },
  computed: {
    roomid() {
      return this.checkedroom.roomid + "";
    }
  },
  watch: {
    dates(val) {
      this.param.tpstime = val[0];
      this.param.tpetime = val[1];
    }
  },
  created() {
    this.param.roomid = this.checkedroom.roomid;
  },
  methods: {
    handleClose() {
      this.dialogVisible = false;
      this.onRefresh();
    },
    updateNext() {
      this.updateVisible = false;
      this.onRefresh();
    },
    onAdd() {
      this.dialogVisible = true;
    },
    onDel() {
      if (this.tpids.length !== 0) {
        this.$ajax(
          "/lock/operate/hotel/f/deleteteamperson",
          { roomid: this.param.roomid },
          "1",
          this.tpids
        )
          .then(res => {
            this.$message({
              message: "删除预约信息成功",
              type: "success"
            });
            this.onRefresh();
          })
          .catch(err => {
            this.$message({
              message: `[${err.resultCode}] ` + err.resultMsg,
              type: "error"
            });
          });
      } else {
        this.$message({
          message: "请选择需要删除的预约信息",
          type: "error"
        });
      }
    },
    onRefresh() {
      //刷新表格
      this.refresh = new Date().getTime();
    },
    onReset() {
      this.dates = [];
      Object.keys(this.param).map(item => {
        if (item != "roomid") {
          this.param[item] = "";
        }
      });
      this.onRefresh();
    },
    onSelection(data) {
      this.tpids = [];
      data.forEach(item => {
        this.tpids.push(item.tpid + "");
      });
    }
  }
};
</script>
