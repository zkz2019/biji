<!-- 推送消息管理 -->
<template>
  <el-container class="wgljjl314">
    <el-header class="elheader query_headbox">
      <com-title>{{toParam.alias}}</com-title>
      <retrieval class="query_head">
        <inpbox :inpb="true">
          <el-select v-model="param.pushtype" class="wid150 qh_inp">
            <el-option
              v-for="item in personnels"
              :key="item.id"
              :label="item.name"
              :value="item.id"
            ></el-option>
          </el-select>
        </inpbox>
        <inpbox :inptext="'请输入'">
          <el-input clearable class="wid250 qh_inp" v-model="param.search" placeholder="输入消息名称进行检索"></el-input>
        </inpbox>

        <inpbox>
          <el-button class="buta qh_btn" size="small" type="primary" @click="search">查询</el-button>
          <fel-button class="qh_btn" @click="onReset">重置</fel-button>
        </inpbox>
      </retrieval>
    </el-header>
    <el-main class="pad0-10 query_main">
      <paging-table
        height="100%"
        interface="/push/1/getmsgpush"
        class="heig100"
        :param="param"
        :refresh="refresh"
        :list="list"
        @onEjectChange="onEjectChange"
      >
        <span v-for="(v,k) of topButs" :key="k" class="sli but-blue" @click="onClick(v.id, v)">
          <i v-if="v.icon" :class="'ficon-'+v.icon"></i>
          {{v.alias}}
        </span>
      </paging-table>
    </el-main>
    <role
      :dialogVisible="dialogRole"
      :defaultData="defaultDataRole"
      @onRefresh="search"
      @beforeClose="dialogRole=false"
    ></role>
    <add
      :dialogVisible="dialogAdd"
      :type="typeAdd"
      @onRefresh="search"
      :defaultData="defaultDataAdd"
      @beforeClose="dialogAdd=false"
    ></add>
    <!-- <addry :dialogVisible="dialogAddRy" @beforeClose="dialogAddRy = false" :param="addRyParam"></addry> -->
    <admin :dialogVisible="dialogAdmin" :buts="adminButs" @beforeClose="dialogAdmin=false"></admin>
  </el-container>
</template>

<script>
import Storages from "@/utils/Storage.js"; //缓存工具
import add from "./add.vue";
import admin from "./admin.vue";
import role from "./role.vue";
// import addRy from "./addry.vue";
export default {
  components: {
    add,
    admin,
    // addRy,
    role
  },
  props: ["toParam"],
  data() {
    let $this = this;
    return {
      personnels: [
        {
          id: "",
          name: "所有消息类型"
        }
      ],
      addRyParam: {},
      dialogAddRy: false,
      dialogRole: false,
      defaultDataRole: {},
      dialogAdd: false,
      defaultDataAdd: {},
      dialogAdmin: false,
      typeAdd: 1,
      dates: [],
      refresh: 0,
      param: {
        search: "",
        pushtype: ""
      },
      listButs: [],
      topButs: [],
      adminButs: [],
      list: [
        {
          name: "序号",
          type: "$index",
          width: "60px"
        },
        {
          name: "推送消息类型",
          prop: "pushtype"
        },
        {
          name: "推送消息名称",
          prop: "pushname"
        },
        {
          name: "推送方式",
          prop: "pushsendtype"
        },
        {
          name: "推送时间点",
          prop: "pushtime"
        },
        {
          name: "推送频率",
          prop: "pushcycle"
        },
        {
          name: "创建日期",
          prop: "pushcdate"
        },
        {
          name: "备注",
          prop: "pushremark"
        },
        {
          name: "推送范围",
          width: "80px",
          template: {
            props: ["scope"],
            computed: {
              isBut() {
                return $this.listButs.includes("6");
              }
            },
            methods: {
              onClick(key, obj) {
                $this.defaultDataRole = Object.assign({}, this.scope.row);
                $this.dialogRole = true;
              }
            },
            template: `<div class="operat-buts"> 
             <el-button type="text" v-if="isBut" size="small" @click.stop="onClick">角色范围</el-button>
            </div>`
          }
        },
        {
          name: "推送内容",
          width: "80px",
          template: {
            props: ["scope"],
            computed: {
              isBut() {
                return $this.listButs.includes("5");
              }
            },
            methods: {
              onClick(key, obj) {
                $this.defaultDataAdd = Object.assign({}, this.scope.row);
                $this.typeAdd = 2;
                $this.dialogAdd = true;
              }
            },
            template: `<div class="operat-buts"> 
             <el-button type="text" v-if="isBut" size="small" @click.stop="onClick">编辑</el-button>
            </div>`
          }
        },
        {
          name: "操作",
          width: "80px",
          template: {
            props: ["scope"],
            computed: {
              isBut() {
                return $this.listButs;
              }
            },
            methods: {
              onClick(key, obj) {
                $this.modify(key, Object.assign({}, this.scope.row));
              }
            },
            template: `<div class="operat-buts"> 
             <el-button type="text" size="small" v-if='scope.row.pushstate == 0 && isBut.includes("1")' @click.stop="onClick(1)">开启</el-button>
             <el-button type="text" size="small" v-if='scope.row.pushstate != 0 && isBut.includes("2")' @click.stop="onClick(0)">关闭</el-button>
            </div>`
          }
        }
      ],
      sonmenu: 0
    };
  },
  created() {
    this.inGetsonmenu();
  },
  mounted() {
    this.getEject();
    this.ingetmsgpushtype();
  },
  methods: {
    inGetsonmenu() {
      this.$ajax("/login/home/2/getsonmenu", { fatherid: this.toParam.id }, "1")
        .then(res => {
          res.result.forEach(value => {
            let id = value.entity.id;
            let alias = value.entity.alias;
            if (id == "686") {
              this.topButs.push(value.entity);
            } else if (id == "687") {
              this.topButs.push(value.entity);
              if (value.childs) {
                this.adminButs.push(...value.childs.map(o => o.entity));
              }
            } else if (id == "688") {
              //开启
              this.listButs.push("1");
            } else if (id == "689") {
              //关闭
              this.listButs.push("2");
            } else if (id == "690") {
              //编辑
              this.listButs.push("5");
            } else if (id == "691") {
              //角色范围
              this.listButs.push("6");
            }
          });
          this.sonmenu = 4;
        })
        .catch(err => {
          if (this.sonmenu < 3) {
            setTimeout(() => {
              this.sonmenu++;
              this.inGetsonmenu();
            }, 1000);
          }
        });
    },
    //重置事件
    onReset() {
      this.dates = [];
      Object.keys(this.param).forEach(key => {
        this.param[key] = "";
      });
      this.search();
    },
    search() {
      this.refresh = new Date().getTime();
    },
    ingetmsgpushtype() {
      this.$ajax("/push/log/1/getmsgpushtype", {}, "1")
        .then(res => {
          let result = res.result;
          this.personnels.push(...result.msgtype);
        })
        .catch(err => {});
    },
    modify(key, obj) {
      let text = "开启";
      if (key == 0) {
        text = "关闭";
      }
      this.$confirmCon("确定要" + text + "当前推送消息吗？", () => {
        this.$ajax(
          "/push/update/4/startorstopmsgpush",
          { pushid: obj.pushid, pushstate: key },
          "1",
          {},
          true
        )
          .then(res => {
            this.search();
            this.$message({
              message: text + "成功",
              type: "success"
            });
          })
          .catch(err => {
            this.$message({
              showClose: true,
              message: `[${err.resultCode}] ` + err.resultMsg,
              type: "error"
            });
          });
      });
    },
    onClick(key, obj) {
      if (key == 686) {
        this.defaultDataAdd = {};
        this.typeAdd = 1;
        this.dialogAdd = true;
      } else if (key == 687) {
        this.dialogAdmin = true;
      }
    },
    onEjectChange() {
      //将用户隐藏表格的信息存到localStorage
      let arr = this.list.map(o => o.show);
      Storages.setlocalStorage("tsxxgl684.eject", arr);
    },
    getEject() {
      //从localStorage获取用户隐藏表格的信息
      let arr = Storages.getlocalStorage("tsxxgl684.eject") || [];
      let lists = [];
      this.list.forEach((value, key) => {
        let obj = Object.assign({}, value);
        obj.show = arr[key];
        lists.push(obj);
      });
      this.list = lists;
    }
  }
};
</script>