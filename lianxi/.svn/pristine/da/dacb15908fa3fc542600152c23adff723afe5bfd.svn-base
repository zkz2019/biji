    ></syzhuangtai>
    <div class="con_rowb">
      <sytongji
        ref="sytongji"
        :Statistics1="Statistics1"
        :Statistics2="Statistics2"
        :Statistics3="Statistics3"
      ></sytongji>
      <sychaxun
        ref="sychaxun"
        :querys1="querys1"
        :querys2="querys2"
        :querys3="querys3"
        :querys4="querys4"
        :querys5="querys5"
      ></sychaxun>
    </div>
  </div>
