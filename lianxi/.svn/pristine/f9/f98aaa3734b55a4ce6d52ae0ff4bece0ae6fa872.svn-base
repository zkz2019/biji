<script>
import echarts from "echarts";
export default {
  components: {
    syzhuangtai: () => import("./syzhuangtai"),
    sytongji: () => import("./sytongji"),
    sychaxun: () => import("./sychaxun")
  },

  name: "index",
  data() {
    return {
      states1: false, //服务器状态
      states2: false, //网关状态
      states3: false, //门锁状态
      states4: false, //入住信息
      states5: false, //房间信息
      Statistics1: false, //开关门统计
      Statistics2: false, //人员区域分布
      Statistics3: false, //楼栋入住统计
      querys1: false, //钥匙开门记录
      querys2: false, //门虚掩报警
      querys3: false, //低电量报警
      querys4: false, //异常查询
      querys5: false, //试探开门
      Interval: null,
      sonmenu: 0
    };
  },
  activated(){
    this.autoFresh();
  },
  deactivated(){
    this.listener(true);
    clearInterval(this.Interval);
  },
  beforeDestroy(){
    this.listener(true);
    clearInterval(this.Interval);
  },
  created() {
    this.inGetsonmenu();
  },
  mounted() {},
  methods: {
    listener(bool) {
      //进入/退出首页监听/清除窗口大小改变
      if(this.$refs.sytongji){
        if (bool) {
          this.$refs.sytongji.resizeListener(bool);
          this.$refs.syzhuangtai.resizeListener(bool);
        }else{
          this.$refs.sytongji.resizeListener();
          this.$refs.syzhuangtai.resizeListener();
        }
      }
    },
    autoFresh() {
      //定时获取数据
      if (
        this.$refs.sytongji &&
        this.$refs.sychaxun &&
        this.$refs.syzhuangtai
      ) {
        this.listener();
        this.Interval = setInterval(() => {
          this.$refs.sytongji.fresh();
          this.$refs.sychaxun.getunlocking();
          this.$refs.syzhuangtai.getdeviceinfo();
        }, 60000);
        return;
      } else {
        setTimeout(() => {
          this.autoFresh();
        }, 500);
      }
    },
    inGetsonmenu() {
      this.$ajax("/login/home/2/getsonmenu", { fatherid: "302" }, "1")
        .then(res => {
          let id = [];
          let alias = [];
          if (res.result[1]) {
            res.result[1].childs.forEach(value => {
              alias.push(value.entity.alias);
              id.push(value.entity.id);
            });
          } else {
            res.result[0].childs.forEach(value => {
              alias.push(value.entity.alias);
              id.push(value.entity.id);
            });
          }

          if (id.indexOf(497) != -1) {
            //开关门统计
            this.Statistics1 = true;
          }
          if (id.indexOf(498) != -1) {
            //人员区域分布
            this.Statistics2 = true;
          }
          if (id.indexOf(499) != -1) {
            //楼栋入住统计
            this.Statistics3 = true;
          }
          if (id.indexOf(500) != -1) {
            //钥匙开门记录
            this.querys1 = true;
          }
          if (id.indexOf(501) != -1) {
            //门虚掩报警
            this.querys2 = true;
          }
          if (id.indexOf(502) != -1) {
            //低电量报警
            this.querys3 = true;
          }
          if (id.indexOf(503) != -1) {
            //异常查询
            this.querys4 = true;
          }
          if (id.indexOf(576) != -1) {
            //房间信息
            this.querys5 = true;
          }
          if (id.indexOf(504) != -1) {
            //服务器状态
            this.states1 = true;
          }
          if (id.indexOf(505) != -1) {
            //网关状态
            this.states2 = true;
          }
          if (id.indexOf(506) != -1) {
            //门锁状态
            this.states3 = true;
          }
          if (id.indexOf(507) != -1) {
            //入住信息
            this.states4 = true;
          }
          if (id.indexOf(508) != -1) {
            //房间信息
            this.states5 = true;
          }
          this.sonmenu = 4;
        })
        .catch(err => {
          if (this.sonmenu < 3) {
            setTimeout(() => {
              this.sonmenu++;
              this.inGetsonmenu();
            }, 1000);
          }
        });
    }
  }
};
</script>

