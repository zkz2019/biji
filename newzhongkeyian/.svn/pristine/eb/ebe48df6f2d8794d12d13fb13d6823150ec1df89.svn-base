import adjustment from "./adjustment";
import kinguser from "./kinguser";
export default {
  props: {
    param: { type: Object, default: {} },
    dialogVisible: Boolean
  },
  data() {
    return {
      keyNum: 0,
      compon: "",
      activeName: "0", //优先根据vuex的状态进行改变
      tobs: []
    };
  },
  computed: {
    dialogactiveName() {
      //被选中的tab状态由vuex进行管理;
      return this.$store.state.fj38.dialogactiveName;
    }
  },
  created() {
    this.$store.commit("fj38setAdmin", this.dialogVisible);
    this.setTobs();
  },
  watch: {
    dialogVisible(val) {
      this.$store.commit("fj38setAdmin", val);
      if (val) {
        // if (this.param.roomtype == 1) {
        //   this.compon = checkIn;
        // } else {
        //   this.compon = currentState;
        // }
        this.activeName = this.dialogactiveName;
        this.setTobs();
        this.compon = this.tobs[this.activeName].compon;
      } else {
        this.$store.commit("setfjg38dialogactiveName", "0");
        this.activeName = this.dialogactiveName;
        this.compon = "";
      }
    },
    param(val) {}
  },
  methods: {
    refresh() {
      this.$emit("refresh");
    },
    setTobs() {
      if (this.param.roomtype == 1) {
        this.tobs = [
          {
            label: "办理入住",
            compon: checkIn
          },
          {
            label: "房间调整",
            compon: adjustment
          },
          {
            label: "退房处理",
            compon: checkOut
          },
          // {
          //   label: "当前状态",
          //   compon: currentState
          // },
          // {
          //   label: "预约信息",
          //   compon: reserveInfo
          // },
          //{
          //  label: "授权详情",
          //  compon: rightDetails
          //},
          {
            label: "授权管理",
            compon: kinguser
          },
          {
            label: "门锁详情",
            compon: roomDetails
          },
          {
            label: "历史开门",
            compon: history
          },
          {
            label: "统计图表",
            compon: tjcharts
          }
        ];
      } else if (this.param.roomtype == 2) {
        this.tobs = [
          {
            label: "当前状态",
            compon: currentState
          },
          {
            label: "预约信息",
            compon: reserveInfo
          },
          //{
          //  label: "授权详情",
          //  compon: rightDetails
          //},
          {
            label: "授权管理",
            compon: kinguser
          },
          {
            label: "房间详情",
            compon: roomDetails
          },
          {
            label: "历史开门",
            compon: history
          },
          {
            label: "统计图表",
            compon: tjcharts
          }
        ];
      } else if (this.param.roomtype == 4) {
        this.tobs = [
          {
            label: "当前状态",
            compon: currentHState
          },
          {
            label: "入住管理",
            compon: checkInH
          },
          {
            label: "预约信息",
            compon: reserveHInfo
          },
          {
            label: "入住历史",
            compon: historyCheckInH
          },
          {
            label: "授权管理",
            compon: kinguserH
          },
          {
            label: "房间详情",
            compon: roomDetails
          },
          {
            label: "历史开门",
            compon: history
          },
          {
            label: "统计图表",
            compon: tjcharts
          }
        ];
      }
    },
    handleClick(tab, event) {
      this.compon = this.tobs[this.activeName].compon;
    },
    beforeClose() {
      this.compon = "";
      this.$emit("beforeClose");
    }
  }
};
