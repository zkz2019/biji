<template>
  <span v-if="param.length > 0">
    <el-menu
      class="batch"
      text-color="#409EFF"
      :default-active="index"
      mode="horizontal"
      active-text-color="#fff"
      @select="handleSelect"
    >
      <el-submenu class="batch-ul" :disabled="isdisabled" index="a">
        <template slot="title">
          <i class="ficon-piliangcaozuo"></i>
          <span>{{text}}</span>
        </template>
        <template v-for="(obj, key) of param">
          <el-menu-item class="batch-li" :key="key" :index="key+''">
            <i v-if="obj.icon" :class="'ficon-'+obj.icon"></i>
            <span>{{obj.alias}}</span>
          </el-menu-item>
        </template>
      </el-submenu>
    </el-menu>
  </span>
</template>

<script>
export default {
  props: {
    type: String | Number,
    list: {
      type: Array,
      default() {
        return [];
      }
    },
    param: {
      type: Array,
      default() {
        return [];
      }
    },
    text: {
      type: String,
      default() {
        return "批量操作";
      }
    }
  },
  computed: {
    isdisabled() {
      if (this.type == 2) {
        return false;
      } else {
        return this.list.length == 0 ? true : false;
      }
    }
  },
  data() {
    return {
      index: "a"
    };
  },
  methods: {
    handleSelect(key, keys) {
      if (!this.isdisabled) {
        let obj = this.param[key];
        this.$emit("onClick", obj.id, obj);
      }
    }
  }
};
</script>

